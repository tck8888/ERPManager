<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5dp"
        android:background="@color/warm_grey"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/common_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        app:tl_iconHeight="22dp"
        app:tl_iconMargin="0dp"
        app:tl_iconWidth="22dp"
        app:tl_indicator_color="@android:color/transparent"
        app:tl_textSelectColor="@color/dodger_blue"
        app:tl_textUnselectColor="@color/warm_grey"
        app:tl_textsize="@dimen/sp_10"/>
</LinearLayout>