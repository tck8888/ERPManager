<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44.5dp">

        <ImageView
            android:id="@+id/icon_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新增采购单"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/icon_add"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="采购"
            android:textColor="@color/dodger_blue"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0_5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white_three"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="仓库"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_xing"/>

                <TextView
                    android:id="@+id/select_warehouse"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择仓库"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="end"
                    android:padding="@dimen/dimen_15dp"
                    android:src="@mipmap/arrow_into_big"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="结算账户"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_xing"/>

                <TextView
                    android:id="@+id/select_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择结算账户"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="end"
                    android:padding="@dimen/dimen_15dp"
                    android:src="@mipmap/arrow_into_big"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white_two"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15dp"
                android:text="选择商品"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <com.tck.commonlibrary.widget.CustomListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/white_two"
                android:dividerHeight="@dimen/dimen_0_5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>
            <ImageView
                android:id="@+id/select_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:src="@mipmap/icon_add"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="采购日期"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_xing"/>

                <TextView
                    android:id="@+id/select_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择采购时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_16"/>

                <ImageView
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="end"
                    android:padding="@dimen/dimen_15dp"
                    android:src="@mipmap/arrow_into_big"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@color/white_two"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dimen_15dp"
                android:text="备注"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dp"
                android:background="@color/white_three"/>

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:background="@drawable/shape_radius_6dp_border_warm_grey_solid_white"
                android:gravity="top"
                android:maxLength="128"
                android:padding="6dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/shape_border_warm_grey_solid_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dimen_15dp"
                    android:text="合计"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/purchase"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/dodger_blue"
                    android:gravity="center"
                    android:text="采购"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>